<div class="container">

<div class="page-header">
  <p class="text-right"> <a href='/logout'>Logout</a> </p>
  <p class="text-left"> <a href='/back'>Back</a> </p>
</div>
 <h1> <%= @user.name%></h1>


      <form action='/secret_create' method='post'>
      <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
      <div class="form-group">
        <label for="">New Secret:</label>
        <input type="text" class="form-control" id="content" name="content" style="width: 400px">
      </div>
      <button type="submit" class="btn btn-default">Create Secret</button>
    </form>



  <div class="row">
    <h3>My secrets:</h3>
    <h4><% @user_secrets.each do |secret| %></h4>
    <p><%= secret.content %></p>
    <%end%>


  <h3>Secrets Liked:</h3>
  <div class="list-group col-md-6">
    <% @liked_secrets.each do |secret| %>
      <a href="#" class="list-group-item">
        <h4 class="list-group-item-heading"><%=secret.secred_id.content%></h4>
        <p> Number of likes: <%=secret.secret.likes.count%> </p>
      </a>
    <% end %>
  </div>
</div>



  </div>
